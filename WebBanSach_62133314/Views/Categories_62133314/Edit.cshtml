
@model WebBanSach_62133314.Models.Category

@{
    ViewBag.Title = "Thêm thể loại";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.IDCate)

    <div class="form-group  my-3">
        @Html.LabelFor(model => model.NameCate, "Tên thể loại", new { @class = "control-label col-md-2 my-3" })

        @Html.EditorFor(model => model.NameCate, new { htmlAttributes = new { @class = "form-control", required = true } })
        @Html.ValidationMessageFor(model => model.NameCate, "", new { @class = "text-danger" })

    </div>

    <div class="form-group  my-3">
        <div class="col-md-offset-2 col-md-10 mb-3 mt-3">
            <input type="submit" value="Lưu" class="btn btn-primary" />
            @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-danger" })
        </div>
    </div>
</div>
}

