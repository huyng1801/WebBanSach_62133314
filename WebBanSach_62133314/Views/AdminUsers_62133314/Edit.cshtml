@model WebBanSach_62133314.Models.AdminUser
@{
    ViewBag.Title = "Cập nhật người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Edit", "AdminUsers_62133314", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ID);
    <div class="form-group my-3">
        @Html.LabelFor(model => model.NameUser, "Tên người dùng", htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.NameUser, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
        @Html.ValidationMessageFor(model => model.NameUser, "", new { @class = "text-danger" })
    </div>
    <div class="form-group my-3">
        @Html.LabelFor(model => model.PasswordUser, "Mật khẩu", htmlAttributes: new { @class = "control-label" })
        @Html.PasswordFor(model => model.PasswordUser, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.PasswordUser, "", new { @class = "text-danger" })
    </div>
    <div class="form-group my-3">
        @Html.LabelFor(model => model.RoleUser, "Quyền", htmlAttributes: new { @class = "control-label" })
        @Html.DropDownListFor(model => model.RoleUser, new SelectList(new[] { "Admin", "Nhân viên" }), "Chọn quyền", new { @class = "form-control", required = true })
        @Html.ValidationMessageFor(model => model.RoleUser, "", new { @class = "text-danger" })
    </div>
    <div class="form-group my-3">
        <input type="submit" value="Lưu" class="btn btn-primary" />
        @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-primary" })
    </div>
}
